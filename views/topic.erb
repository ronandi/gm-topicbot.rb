<div id = "wrap">
  <div class="container">
    <div class="page-header">
      <h1><%= @topic.url_shortened_topic %></h1>
      <p class="lead">Started by: <%= @topic.creator %>, on <%= @time.strftime("%a %B, %Y | %l:%M%P") %></p>
    </div>
    <% @topic.messages.each do |message| %>
      <p><strong><%= message.sender %></strong>: <%= message.body %></p>
  <% end %>
  </div>
</div>
<div id="footer">
  <div class="container">
    <p class="text-muted credit"><a href="https://github.com/ronandi/gm-topicbot.rb">gm-topicbot.rb</a> created by <a href="https://github.com/ronandi/">Rohit Kumar</a>.</p>
  </div>
</div>
